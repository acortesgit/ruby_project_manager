# Dockerfile para desarrollo - incluye ImageMagick para rails_code_auditor
# Nota: Usamos Ruby 3.3 ya que 3.4 aún no está disponible en Docker Hub
ARG RUBY_VERSION=3.3.7
FROM docker.io/library/ruby:$RUBY_VERSION-slim

WORKDIR /rails

# Instalar dependencias del sistema incluyendo ImageMagick para rmagick
RUN apt-get update -qq && \
    apt-get install --no-install-recommends -y \
      build-essential \
      git \
      curl \
      libpq-dev \
      libyaml-dev \
      imagemagick \
      libmagickwand-dev \
      postgresql-client \
      nodejs \
      npm \
      pkg-config \
      python-is-python3 && \
    rm -rf /var/lib/apt/lists /var/cache/apt/archives

# Instalar Yarn
RUN npm install -g yarn

# Configurar Bundler
ENV BUNDLE_PATH="/usr/local/bundle" \
    BUNDLE_WITHOUT=""

# Copiar Gemfile y instalar dependencias
COPY Gemfile Gemfile.lock ./
RUN bundle install

# Copiar package.json e instalar dependencias de Node
COPY package.json yarn.lock ./
RUN yarn install

# Copiar el resto de la aplicación
COPY . .

# Precompilar assets (opcional en desarrollo)
# RUN SECRET_KEY_BASE_DUMMY=1 bundle exec rails assets:precompile

EXPOSE 3000

CMD ["./bin/rails", "server", "-b", "0.0.0.0"]

